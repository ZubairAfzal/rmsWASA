
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login | WASA RMS </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Assets/site.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>

@if (!string.IsNullOrEmpty(Session["UserName"] as string))
{
    Response.Redirect("~/Home/Index");
}
else
{

    <body style="background-image: url('../../Assets/img/rainfall_1.jpg'); background-repeat:no-repeat; background-size:cover; background-position: center center">
        <div class="col-md-4 col-md-offset-4" style=" padding:20px; margin-top:50px; margin-bottom:50px;   z-index: 5; ">
            <div style="position: absolute;   z-index: -1;   top: 0; border-radius:10px;    bottom: 0;  left: 0;  right: 0;  background-color: #6b899f;  opacity: .5;    width: 100%;    height: 100%;"></div>
            <div style="text-align:center">
                <img src="~/Assets/img/sticker34_1.png" style="width:120px;" />
                <div>
                    <h3 style="color:white;">WASA Remote Monitoring System</h3>
                </div>
            </div>
            <hr />

            @using (Html.BeginForm("Login", "Account"))
            {
                <form class="col-md-12">
                    <div class="form-group">
                        <input id="userName" name="userName" type="text" class="form-control input-lg" placeholder="Enter User Name">
                    </div>
                    <div class="form-group">
                        <input id="password" name="password" type="password" class="form-control input-lg" placeholder="Enter Password">
                    </div>
                    <div class="checkbox">
                        <label style="color:white"><input type="checkbox"> Remember Me</label>
                    </div>
                    <div class="form-group" style="text-align:center">
                        <button class="btn btn-lg" style="border-radius:0px;    border-color: #4a87db; background-color: #235395; color: white;">Sign In</button>
                    </div>
                    <div class="form-group">
                        <span style="display:none"><a href="#" style="color:white">Forgot Password?</a></span>
                    </div>
                </form>
            }
        </div>
    </body>
}
</html>

@section Scripts{

    <script src="~/Assets/bootstrap/js/bootstrap.js" type="text/javascript"></script>
    <script src="~/Assets/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
}