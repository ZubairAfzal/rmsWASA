                                                                                <thead style="font-weight: bolder; text-align: center;">
                                                                                    <tr>
                                                                                        <td>Current Operation Mode</td>
                                                                                        <td>Action</td>
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody>
                                                                                    <tr>
                                                                                        @if (Convert.ToInt32(ViewBag.masterAutoEnable) == 0)
                                                                                        {
                                                                                            <td style=" text-align: center;">
                                                                                                Manual
                                                                                            </td>
                                                                                            <td style=" text-align: center;">
                                                                                                NONE
                                                                                            </td>
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            if (Convert.ToInt32(ViewBag.GetAutoRemoteMode) == 0)
                                                                                            {
                                                                                                <td style=" text-align: center;">
                                                                                                    Auto
                                                                                                </td>
                                                                                                <td style=" text-align: center;">
                                                                                                    @Html.ActionLink("Switch to Remote Control", "Edit", new { id = 0 })
                                                                                                </td>
                                                                                            }
                                                                                            else
                                                                                            {
                                                                                                <td style=" text-align: center;">
                                                                                                    Remote Control
                                                                                                </td>
                                                                                                <td style=" text-align: center;">
                                                                                                    @Html.ActionLink("Switch to Auto Mode", "Edit", new { id = 0 })
                                                                                                </td>
                                                                                            }
                                                                                        }
                                                                                    </tr>
                                                                                </tbody>
                                                                            </table>
                                                                        </div>
                                                                    </center>

                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row">
