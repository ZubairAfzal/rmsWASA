                                                                                        <td>Action</td>
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody>
                                                                                    <tr>
                                                                                        <td>Pump No. 1</td>
                                                                                        @if (Convert.ToInt32(ViewBag.isP1Manual) == 0)
                                                                                        {
                                                                                            <td style=" text-align: center;">
                                                                                                Manual
                                                                                            </td>
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            if (Convert.ToInt32(ViewBag.GetAutoRemoteMode) == 0)
                                                                                            {
                                                                                                <td style=" text-align: center;">
                                                                                                    Auto
                                                                                                </td>
                                                                                            }
                                                                                            else
                                                                                            {
                                                                                                <td style=" text-align: center;">
                                                                                                    Remote
                                                                                                </td>
                                                                                            }
                                                                                        }
                                                                                        @if (Convert.ToInt32(ViewBag.P1Status) == 0)
                                                                                        {
                                                                                            <td style=" text-align: center;">
                                                                                                OFF
                                                                                            </td>
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            <td style=" text-align: center;">
                                                                                                ON
                                                                                            </td>
                                                                                        }
                                                                                        @if (Convert.ToInt32(ViewBag.isP1Manual) == 0 || Convert.ToInt32(ViewBag.GetAutoRemoteMode) == 0)
                                                                                        {
                                                                                            if (Convert.ToInt32(ViewBag.P1Status) == 0)
                                                                                            {
                                                                                                <td style=" text-align: center; cursor: not-allowed">
                                                                                                    TURN ON
                                                                                                </td>
                                                                                            }
                                                                                            else
                                                                                            {
                                                                                                <td style=" text-align: center; cursor: not-allowed">
                                                                                                    TURN OFF
                                                                                                </td>
                                                                                            }
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            if (Convert.ToInt32(ViewBag.P1Status) == 0)
                                                                                            {
                                                                                                <td style=" text-align: center;">
                                                                                                    @Html.ActionLink("TURN ON", "Edit", new { id = 1 })
                                                                                                </td>
                                                                                            }
                                                                                            else
                                                                                            {
                                                                                                <td style=" text-align: center;">
                                                                                                    @Html.ActionLink("TURN OFF", "Edit", new { id = 1 })
                                                                                                </td>
                                                                                            }
                                                                                        }
                                                                                    </tr>

                                                                                    <tr>
                                                                                        <td>Pump No. 2</td>
