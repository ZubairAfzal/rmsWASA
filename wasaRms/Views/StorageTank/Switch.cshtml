                                                                                            }
                                                                                            else
                                                                                            {
                                                                                                <td style=" text-align: center;">
                                                                                                    @Html.ActionLink("TURN OFF", "Edit", new { id = 2 })
                                                                                                </td>
                                                                                            }
                                                                                        }
                                                                                    </tr>


                                                                                    <tr>
