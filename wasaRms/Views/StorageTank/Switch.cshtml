                                                                                            <td style=" text-align: center;">
                                                                                                OFF
                                                                                            </td>
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            <td style=" text-align: center;">
                                                                                                ON
                                                                                            </td>
                                                                                        }
                                                                                        @if (Convert.ToInt32(ViewBag.isP2Manual) == 0 || Convert.ToInt32(ViewBag.GetAutoRemoteMode) == 0)
                                                                                        {
                                                                                            if (Convert.ToInt32(ViewBag.P2Status) == 0)
                                                                                            {
                                                                                                <td style=" text-align: center; cursor: not-allowed">
                                                                                                    TURN ON
                                                                                                </td>
                                                                                            }
                                                                                            else
                                                                                            {
                                                                                                <td style=" text-align: center; cursor: not-allowed">
                                                                                                    TURN OFF
                                                                                                </td>
                                                                                            }
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            if (Convert.ToInt32(ViewBag.P2Status) == 0)
                                                                                            {
                                                                                                <td style=" text-align: center;">
                                                                                                    @Html.ActionLink("TURN ON", "Edit", new { id = 2 })
