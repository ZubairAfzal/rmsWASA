                                                                                @if (ViewBag.SelectedResource != null)
                                                                                {
                                                                                    @Html.DropDownList("resource", new SelectList(ViewBag.ResourceList, ViewBag.SelectedResource), new { @class = "span6 form-control", @style = " color:black;" })
                                                                                }
